@model IEnumerable<MicroserviceAspDemo.Viewmodels.PuzzleViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(@Html.DisplayName(item.Name), "Highscore", "Home", new { puzzleName = item.Name }, null)

            </td>
            <td>
                @Html.DisplayName(item.Difficulty)
            </td>
        </tr>
}
    </tbody>
</table>
